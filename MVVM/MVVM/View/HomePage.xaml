<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MVVM.View.HomePage">
  <ContentPage.Content>
    <StackLayout Padding="20">
      <Label Text="Seja Bem Vindo!" FontSize="20" HorizontalTextAlignment="Center" Margin="0,80,0,30"/>
      <Button Text="Cliente" Command="{Binding ClienteCommand}"/>
      <Button Text="Produto" Command="{Binding ProdutoCommand}"/>
      <Button Text="Pedido" Command="{Binding PedidoCommand}"/>
    </StackLayout>
  </ContentPage.Content>
</ContentPage>